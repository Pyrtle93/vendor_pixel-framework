<?xml version="1.0" encoding="utf-8"?>
<com.google.android.setupdesign.GlifLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/face_enroll_participation"
    style="@style/FaceLayoutTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    app:sucHeaderText="@string/face_enrolling_participation_title">

    <LinearLayout
        style="@style/SudContentFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            style="@*android:style/TextAppearance.DeviceDefault.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:lineSpacingExtra="5.0dip"
            android:text="@string/face_enrolling_participation_description" />

        <Space
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            style="@style/SudContentFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal">

            <CheckBox
                android:id="@id/agree_to_participate"
                style="@*android:style/TextAppearance.DeviceDefault.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/face_enroll_participation_checkbox_minimum_size"
                android:minHeight="@dimen/face_enroll_participation_checkbox_minimum_size"
                android:text="@string/face_consent" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.setupdesign.GlifLayout>
