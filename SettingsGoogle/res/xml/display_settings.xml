        <Preference android:persistent="false" android:title="@string/accessibility_text_reading_options_title" android:key="text_reading_options" android:fragment="com.android.settings.accessibility.TextReadingPreferenceFragment" settings:controller="com.android.settings.accessibility.TextReadingFragmentForDisplaySettingsController"/>
        <Preference android:title="@string/system_navigation_title" android:key="gesture_system_navigation_input_summary" android:fragment="com.android.settings.gestures.SystemNavigationGestureSettings" settings:controller="com.android.settings.gestures.SystemNavigationPreferenceController"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_name_color">
        <SwitchPreference android:title="@string/display_white_balance_title" android:key="display_white_balance" android:summary="@string/display_white_balance_summary" settings:controller="com.android.settings.display.DisplayWhiteBalancePreferenceController"/>
        <com.android.settingslib.PrimarySwitchPreference android:title="@string/night_display_title" android:key="night_display" android:fragment="com.android.settings.display.NightDisplaySettings" settings:controller="com.android.settings.display.NightDisplayPreferenceController" settings:keywords="@string/keywords_display_night_display"/>
        <Preference android:title="@string/color_mode_title" android:key="color_mode" android:fragment="com.android.settings.display.ColorModePreferenceFragment" settings:controller="com.android.settings.display.ColorModePreferenceController" settings:keywords="@string/keywords_color_mode"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/category_name_display_controls">
        <com.android.settingslib.PrimarySwitchPreference android:title="@string/accelerometer_title" android:key="auto_rotate" android:fragment="com.android.settings.display.SmartAutoRotatePreferenceFragment" settings:controller="com.android.settings.display.SmartAutoRotatePreferenceController" settings:keywords="@string/keywords_auto_rotate"/>
        <Preference android:title="@string/accelerometer_title" android:key="device_state_auto_rotate" android:fragment="com.android.settings.display.SmartAutoRotatePreferenceFragment" settings:controller="com.android.settings.display.DeviceStateAutoRotateOverviewController" settings:keywords="@string/keywords_auto_rotate"/>
        <Preference android:title="@string/screen_resolution_title" android:key="screen_resolution" android:fragment="com.android.settings.display.ScreenResolutionFragment" settings:controller="com.android.settings.display.ScreenResolutionController" settings:keywords="@string/keywords_screen_resolution"/>
        <SwitchPreference android:title="@string/peak_refresh_rate_title" android:key="peak_refresh_rate" android:summary="@string/peak_refresh_rate_summary" settings:controller="com.android.settings.display.PeakRefreshRatePreferenceController"/>
        <SwitchPreference android:title="@string/touch_sensitivity_title" android:key="touch_sensitivity" android:summary="@string/touch_sensitivity_summary" settings:controller="com.google.android.settings.touch.TouchSensitivityPreferenceController" settings:keywords="@string/keywords_touch_sensitivity"/>
